<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:elevation="4dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="@dimen/padding_item_bank">

            <TextView
                android:id="@+id/tv_bank_name_IB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/bank_name_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tv_bank_region_IB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/bank_region_text_size"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tv_bank_city_IB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/bank_region_text_size"
                />

            <TextView
                android:id="@+id/tv_bank_phone_IB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bank_address_phone_color"
                android:textSize="@dimen/bank_address_text_size"
                android:layout_gravity="right"
                />

            <TextView
                android:id="@+id/tv_bank_address_IB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bank_address_phone_color"
                android:textSize="@dimen/bank_address_text_size"
                android:layout_gravity="right"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/colorAppTransparent">

            <ImageView
                android:id="@+id/iv_link_IB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp"
                android:src="@drawable/ic_link"
                android:layout_weight="1"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/iv_map_IB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_map"
                android:layout_weight="1"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/iv_phone_IB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_phone"
                android:layout_weight="1"
                android:layout_gravity="center"
                />

            <RelativeLayout
                android:id="@+id/rl_next_IB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_next"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/pink">

                </View>


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>